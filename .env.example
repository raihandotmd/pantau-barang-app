APP_NAME="Pantau Barang"
APP_ENV=local  # Change to 'production' when deploying
APP_KEY=  # Run: php artisan key:generate
APP_DEBUG=true  # CRITICAL: Set to 'false' in production for security
APP_URL=http://localhost  # Update to your production domain

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12  # Increase to 14-16 for better security in production

LOG_CHANNEL=stack
LOG_STACK=single  # Use 'daily' in production for log rotation
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug  # Change to 'error' or 'warning' in production

# Database Configuration
# For production, use MySQL or PostgreSQL instead of SQLite
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=pantau_barang
DB_USERNAME=root
DB_PASSWORD=

# Session Configuration
# IMPORTANT: Use 'redis' or 'memcached' in production for better performance
SESSION_DRIVER=database  # Change to 'redis' for production
SESSION_LIFETIME=120  # Session timeout in minutes
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Queue Configuration
# IMPORTANT: Use 'redis' or 'database' with supervisor in production
QUEUE_CONNECTION=database  # Use 'redis' for better performance

# Cache Configuration
# IMPORTANT: Use 'redis' or 'memcached' in production
CACHE_STORE=database  # Change to 'redis' for production
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

# Redis Configuration (Recommended for production)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=log  # Change to 'smtp' for production
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (if using S3 for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Production Deployment Notes:
# 1. Run: php artisan config:cache
# 2. Run: php artisan route:cache
# 3. Run: php artisan view:cache
# 4. Set up queue workers with supervisor
# 5. Configure proper backup strategy
# 6. Set up error monitoring (e.g., Sentry)
# 7. Enable HTTPS and configure proper SSL certificates
